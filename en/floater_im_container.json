{
   "multi_floater": {
      "@name": "floater_im_box",
      "@title": {
         "string": "CONVERSATIONS"
      },
      "string:collapse_icon": {
         "@name": "collapse_icon",
         "@value": {
            "string": "Conv_toolbar_collapse"
         }
      },
      "string:expand_icon": {
         "@name": "expand_icon",
         "@value": {
            "string": "Conv_toolbar_expand"
         }
      },
      "layout_stack:conversations_stack": {
         "@name": "conversations_stack",
         "layout_panel:conversations_layout_panel": {
            "@name": "conversations_layout_panel",
            "layout_stack:conversations_pane_buttons_stack": {
               "@name": "conversations_pane_buttons_stack",
               "layout_panel:conversations_pane_buttons_expanded": {
                  "@name": "conversations_pane_buttons_expanded",
                  "menu_button:sort_btn": {
                     "@name": "sort_btn",
                     "@tool_tip": {
                        "string": "View/sort options"
                     }
                  },
                  "button:add_btn": {
                     "@name": "add_btn",
                     "@tool_tip": {
                        "string": "Start a new conversation"
                     }
                  },
                  "button:speak_btn": {
                     "@name": "speak_btn",
                     "@tool_tip": {
                        "string": "Speak with people using your microphone"
                     }
                  }
               },
               "layout_panel:conversations_pane_buttons_collapsed": {
                  "@name": "conversations_pane_buttons_collapsed",
                  "button:expand_collapse_btn": {
                     "@name": "expand_collapse_btn",
                     "@tool_tip": {
                        "string": "Collapse/Expand this list"
                     }
                  }
               }
            },
            "panel:conversations_list_panel": {
               "@name": "conversations_list_panel"
            }
         },
         "layout_panel:messages_layout_panel": {
            "@name": "messages_layout_panel",
            "panel_container:im_box_tab_container": {
               "@name": "im_box_tab_container",
               "panel:stub_panel": {
                  "@name": "stub_panel",
                  "button:stub_collapse_btn": {
                     "@name": "stub_collapse_btn",
                     "@tool_tip": {
                        "string": "Collapse this pane"
                     }
                  },
                  "text:stub_textbox": {
                     "@name": "stub_textbox",
                     "#text": {
                        "string": "\n                         This conversation is in a separate window.   [secondlife:/// Bring it back.]\n                    "
                     }
                  }
               }
            }
         }
      }
   }
}